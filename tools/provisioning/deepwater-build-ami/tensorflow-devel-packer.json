{
  "description": "Tensorflow dev build AMI for Amazon EC2",

  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "aws_region": "",
    "version": "1.7.1",
    "revision": "0",
    "source_ami": "",
    "instance_type": "g2.2xlarge",
	"aws_ecr_registry" : "524466471676.dkr.ecr.us-east-1.amazonaws.com"
  },

  "builders": [
  {
    "name": "docker",
    "type" : "docker",
    "image" : "nvidia/cuda:7.5-cudnn5-devel",
    "commit": true
  },
  {
    "name": "ami",
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "{{user `aws_region`}}",
    "source_ami": "{{user `source_ami`}}",
    "instance_type": "{{user `instance_type`}}",
    "ssh_username": "ubuntu",
    "ami_name": "ubuntu-14.04-build-docker-8.0-{{user `version`}}.{{user `revision`}}",
    "ami_groups": ["all"],
    "ami_regions": [
      "us-east-1"
    ]
  }],

  "provisioners": [{
    "type": "shell",
    "environment_vars": [
      "version={{user `version`}}"
    ],
    "scripts": [
        "install_tensorflow_build_env.sh"
    ]
  }],

  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "{{user `aws_ecr_registry` }}/build",
        "tag": "latest"
      },
      {
        "type": "docker-push",
        "login": false,
        "login_server": "{{user `aws_ecr_registry`}}/build"
      }
    ]
  ]


}
